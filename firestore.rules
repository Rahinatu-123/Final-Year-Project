rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - comprehensive permissions
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // All subcollections
      match /{document=**} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Business collection (for tailor business profiles)
    match /business/{businessId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.ownerId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
      
      // All subcollections
      match /{document=**} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == businessId;
      }
    }

    // Tailors collection
    match /tailors/{tailorId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == tailorId;
      allow update: if request.auth != null && request.auth.uid == tailorId;
      allow delete: if request.auth != null && request.auth.uid == tailorId;
      
      // All subcollections
      match /{document=**} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == tailorId;
      }
    }

    // Posts collection
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Orders collection
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Chats collection
    match /chats/{chatId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null;
        allow delete: if request.auth != null;
      }
    }

    // Styles collection
    match /styles/{styleId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Fabrics collection
    match /fabrics/{fabricId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
